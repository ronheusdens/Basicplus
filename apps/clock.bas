10 CLS
20 PRINT "CLOCK (Model III BASIC)"
30 PRINT "Enter start time (24h)."
40 INPUT "HOURS (0-23)? " H
45 IF H<0 OR H>23 THEN PRINT "BAD HOURS":GOTO 40
50 INPUT "MINUTES (0-59)? " M
55 IF M<0 OR M>59 THEN PRINT "BAD MINUTES":GOTO 50
60 INPUT "SECONDS (0-59)? " S
65 IF S<0 OR S>59 THEN PRINT "BAD SECONDS":GOTO 60
70 CLS
80 PRINT "Press Q to quit."
90 REM ---- main loop ----
100 GOSUB 400
110 PRINT@ 44, CHR$(48+H1);
112 PRINT@ 45, CHR$(48+H2);
114 PRINT@ 46, ":";
116 PRINT@ 47, CHR$(48+M1);
118 PRINT@ 48, CHR$(48+M2);
120 PRINT@ 49, ":";
122 PRINT@ 50, CHR$(48+S1);
124 PRINT@ 51, CHR$(48+S2);
126 A$=INKEY$
127 IF A$="Q" OR A$="q" THEN END
130 GOSUB 300
140 S=S+1
150 IF S<60 THEN 100
160 S=0: M=M+1
170 IF M<60 THEN 100
180 M=0: H=H+1
190 IF H<24 THEN 100
200 H=0
210 GOTO 100
300 REM ---- simple delay loop (approximately 1 second) ----
310 FOR D=1 TO 2000000: NEXT D
320 RETURN
400 REM ---- build HH:MM:SS digits ----
410 H1=INT(H/10): H2=H-10*H1
420 M1=INT(M/10): M2=M-10*M1
430 S1=INT(S/10): S2=S-10*S1
440 RETURN
