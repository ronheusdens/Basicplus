{
    "name": "basic-plus-plus",
    "displayName": "Basic++ Language",
    "description": "Professional IDE support for Basic++ object-oriented programming language",
    "version": "0.1.0",
    "author": "Ron Heusdens",
    "license": "MIT",
    "publisher": "basicplusplus",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Programming Languages",
        "Debuggers"
    ],
    "keywords": [
        "basic",
        "basic++",
        "oop",
        "programming",
        "interpreter"
    ],
    "activationEvents": [
        "onLanguage:basicpp"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "basicpp",
                "aliases": [
                    "Basic++",
                    "basicpp"
                ],
                "extensions": [
                    ".bas",
                    ".basicpp"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "basicpp",
                "scopeName": "source.basicpp",
                "path": "./syntaxes/basicpp.tmLanguage.json"
            }
        ],
        "themes": [
            {
                "label": "Basic++ Dark",
                "uiTheme": "vs-dark",
                "path": "./themes/basicpp-dark.json"
            },
            {
                "label": "Basic++ Light",
                "uiTheme": "vs",
                "path": "./themes/basicpp-light.json"
            }
        ],
        "debuggers": [
            {
                "type": "basicpp",
                "label": "Basic++ Debugger",
                "program": "./out/debugAdapter.js",
                "runtime": "node",
                "configurationAttributes": {
                    "launch": {
                        "properties": {
                            "program": {
                                "type": "string",
                                "description": "Absolute path to the Basic++ program"
                            },
                            "stopOnEntry": {
                                "type": "boolean",
                                "description": "Stop on entry",
                                "default": false
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "name": "Launch Basic++ Program",
                        "type": "basicpp",
                        "request": "launch",
                        "program": "${workspaceFolder}/program.bas",
                        "stopOnEntry": false
                    }
                ]
            }
        ],
        "commands": [
            {
                "command": "basicpp.runProgram",
                "title": "Run Basic++ Program"
            },
            {
                "command": "basicpp.debugProgram",
                "title": "Debug Basic++ Program"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/node": "^16.0.0",
        "@types/vscode": "^1.60.0",
        "typescript": "^4.3.0"
    },
    "dependencies": {
        "vscode-debugadapter": "^1.47.0",
        "vscode-debugprotocol": "^1.47.0"
    }
}