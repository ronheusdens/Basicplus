REM Better test of procedure return value expressions
PROCEDURE Add(X, Y)
    LET result = X + Y
    PRINT "  Add(", X, ",", Y, ") =", result
    RETURN result
END PROCEDURE

PRINT "Test 1: LET A = Add(3, 5)"
LET A = Add(3, 5)
PRINT "A =", A

PRINT "Test 2: LET B = Add(10, 20) * 2"
LET B = Add(10, 20) * 2
PRINT "B =", B

PRINT "Test 3: IF Add(2, 3) > 4"
IF Add(2, 3) > 4 THEN
    PRINT "Result is > 4 - PASSED"
ELSE
    PRINT "Result is NOT > 4 - FAILED"
ENDIF

PRINT "Test 4: Direct in PRINT"
PRINT "Add(7, 8) =", Add(7, 8)

END
