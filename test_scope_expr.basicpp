REM Test local variable scope with return expressions
PROCEDURE ModifyX(Val)
    LET X = Val * 10
    PRINT "  In procedure: X =", X
    RETURN X
END PROCEDURE

LET X = 5
PRINT "Global X before call:", X
LET Result = ModifyX(3)
PRINT "Global X after call:", X
PRINT "Call returned:", Result

REM Test nested procedure calls
PROCEDURE Double(N)
    RETURN N * 2
END PROCEDURE

PROCEDURE Quad(N)
    RETURN Double(Double(N))
END PROCEDURE

PRINT "Quad(5) =", Quad(5)

END
